<h1>Your team</h1>
<%= form_with url: team_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Type a name"
    %>
  <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
<% end %>
<h2>On duty</h2>
<% @users_on_shift.each do |user|%>
  <% if user.avatar.attached? %>
    <%= link_to cl_image_tag(user.avatar.key, class: "avatar"), profile_path(id: user.id) %>
  <% else %>
    <%= link_to image_tag("avatar_placeholder.jpg", class: "avatar"), profile_path(id: user.id) %>
  <% end %>
  <%= link_to user.first_name, profile_path(id: user.id), class: "user-name" %>
  <p>Nurse</p>
  <p> <%= user.tasks.count %> tasks assigned</p>
<% end %>
<h2>Out today</h2>
<% @users_out_today.each do |user|%>
  <% if user.avatar.attached? %>
    <%= link_to cl_image_tag(user.avatar.key, class: "avatar"), profile_path(id: user.id) %>
    <% else %>
    <%= link_to image_tag("avatar_placeholder.jpg", class: "avatar"), profile_path(id: user.id) %>
  <% end %>
  <%= link_to user.first_name, profile_path(id: user.id), class: "user-name" %>
  <p>Nurse</p>
  <p> <%= user.tasks.count %> tasks assigned</p>

<% end %>
